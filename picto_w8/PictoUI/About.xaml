<Page
    x:Class="PictoUI.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PictoUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <TextBlock Text="Picto" FontFamily="Segoe UI" FontWeight="SemiLight" FontSize="26.667" />
            <TextBlock Text="Version 2.0.0.0" FontFamily="Segoe UI" FontWeight="SemiLight" FontSize="18" />
            <TextBlock Text="{Binding DevelopedBy, Source={StaticResource ResourceLoader}}"  FontFamily="Segoe UI" FontWeight="SemiLight" FontSize="18" Margin="0 20 0 0" >
                <Hyperlink NavigateUri="http://xuaps.com"> Xuaps</Hyperlink>.
            </TextBlock>
            <TextBlock Text="{Binding PictosBy, Source={StaticResource ResourceLoader}}" FontFamily="Segoe UI" FontWeight="SemiLight" FontSize="18" Margin="0 10 0 0">
                <Hyperlink NavigateUri="http://sclera.be"> Sclera</Hyperlink>.
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
